<column-mc:>
   <h1><%= object_singular_name  %></h1>
<ul>
    <%= model_name.constantize.columns.map(&:name).map do |column_name|
     %{<li><label>#{column_name.humanize}</label><%= @#{object_singular_name}.#{column_name}#{'.strftime("%Y.%m.%d %H:%M")' if %w(created_at updated_at).include?(column_name)} \%\></li>}
    end.join("\n") -%>
</ul>
<% if actions.include?('edit') %><%%= link_to 'Edit', edit_<%= namespace_prefix %><%= object_singular_name %>_path(@<%= object_singular_name %>) %> | <% end %>
<%%= link_to 'Back', <%= namespace_prefix %><%= object_plural_name %>_path %>
</column-mc:>